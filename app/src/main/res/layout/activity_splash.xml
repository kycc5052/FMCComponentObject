<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79AEFF"
    tools:context="myas.xika.com.fmccomponentobject.activity.SplashActivity"
    >

    <ImageView
        android:id="@+id/act_splash_iv_splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        />

    <TextView
        android:id="@+id/act_splash_tv_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Copyright 2016 XikaKyc. All Rights Reserved."
        android:textColor="#000000"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/act_splash_tv_copyright_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/act_splash_tv_copyright"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="XikaKyc公司 版权所有"
        android:textColor="#000000"
        android:textSize="15sp"
        />
</RelativeLayout>
