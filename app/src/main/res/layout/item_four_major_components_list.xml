<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/item_four_major_components_list_bg_selector"
    >
    <!--列表_组件_Logo_图标-->
    <ImageView
        android:id="@+id/item_components_iv_logo_icon"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
    <!--列表_组件_Logo_名字-->
    <TextView
        android:id="@+id/item_components_iv_logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_components_iv_logo_icon"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        />
    <!--列表_组件_Logo_提示-->
    <TextView
        android:id="@+id/item_components_iv_logo_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/item_components_iv_logo_arrow"
        android:text="当前组件"
        android:textColor="#FFF8DC"
        android:visibility="gone"
        />
    <!--列表_组件_Logo_箭头-->
    <ImageView
        android:id="@+id/item_components_iv_logo_arrow"
        android:layout_width="7dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/right_arrow_white"
        />
    <!--列表_组件_Logo_线-->
    <View
        android:id="@+id/item_components_iv_logo_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#D1EEEE"
        />
</RelativeLayout>